---
import { IconEye } from "@tabler/icons-react";
import { slugify } from "../utils/slugify";

interface Props {
    category: string;
    count: number;
    checked: boolean;
}

const { category, count, checked } = Astro.props;
const id = slugify(category);
---

<div class="filter-tag">
    <input
        class="input"
        type="radio"
        id={id}
        name="project-filter"
        checked={checked}
    />
    <label class="label" for={id}>
        <IconEye className="icon" />
        {category}
        <span class="count">{count}</span>
    </label>
</div>

<style>
    .filter-tag {
        display: flex;
        align-items: center;
    }
    .input {
        display: none;
    }
    .label {
        position: relative;
        display: flex;
        align-items: baseline;
        gap: 0.5rem;
        border: 1px solid transparent;
        font-size: 14px;
        padding: 0.5rem 1rem 0.5rem 0.75rem;
        border-radius: 999px;
        transition: all 0.3s;
        color: var(--color-blue);
        cursor: pointer;
        width: 100%;
        white-space: nowrap;
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.1);
    }
    .label::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        transition: all 0.3s;
        border-radius: inherit;
        background-color: var(--color-blue-5);
    }
    .icon {
        color: var(--color-blue);
        transition: all 0.3s;
        transform: scale(0);
        width: 0;
        height: 1rem;
    }
    .label:hover::after {
        background-color: var(--color-blue-10);
    }
    .input:checked + .label::after {
        background-color: var(--color-blue-10);
    }
    .input:checked + .label:hover::after {
    }
    .input:checked + .label .icon {
        transform: translateY(0.1375rem) rotate(0deg);
        width: 1rem;
    }
    .count {
        opacity: 0.75;
        font-size: 0.75rem;
    }
</style>
