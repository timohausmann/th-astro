---
import { getProjects } from "../scripts/getProjects";
import ProjectTile from "./ProjectTile.astro";

const projects = getProjects();
---

<div id="project-wrap">
    <section class="projects row" id="referenzen">
        <h1 class="title">Referenzen</h1>
        <ul class="list row-inner row-inner--full">
            {projects.map((project) => <ProjectTile project={project} />)}
        </ul>
    </section>
</div>
<style>
    #project-wrap {
        position: relative;
        padding-top: max(5vw, 2rem);
        padding-bottom: 6rem;
        background: #f9f9f9;
        box-shadow: inset 0 0 64px 64px rgba(0, 0, 0, 0.11);
    }
    .title {
        font-family: "Delight";
        font-size: clamp(1.75rem, 4vw, 3rem);
        font-weight: 800;
        text-align: center;
        margin-bottom: 2em;
        color: #3e3b9c;
    }

    .projects {
        position: relative;
        z-index: 2;
        --limit: 320px;
    }

    .list {
        display: flex;
        flex-direction: column;
        gap: 4rem;
        align-items: center;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 4rem;
    }

    @media (--projects-large) {
        .list {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            align-items: start;
            justify-content: center;
        }
    }
    @media (--xl3) {
        .list {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>
