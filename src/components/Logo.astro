---
import DecoderText from "./DecoderText.astro";
---

<hgroup>
    <a class="logo frost-bg" href="/">
        <h1 class="caps" aria-label="Timo Hausmann">
            <DecoderText text="Timo Hausmann" />
        </h1>
        <span class="caps divider" aria-hidden="true" role="presentation"
            >//</span
        >
        <h2 class="caps" aria-label="Creative Coding">
            <DecoderText text="Creative Coding" />
        </h2>
    </a>
</hgroup>

<style>
    .logo {
        display: flex;
        flex-direction: column;
        align-items: baseline;
        justify-content: center;
        gap: 0.5rem;
        display: flex;
        align-items: center;
        padding: 1rem calc(var(--screen-padding) * 2);
        border-radius: 9999px;
        box-shadow: 0 2px 16px rgba(0, 0, 0, 0.05);
        font-size: 14px;
    }
    h1,
    h2,
    .divider {
        color: var(--color-blue);
        line-height: 1;
        font-size: inherit;
    }
    h1 {
        letter-spacing: 0.19em;
    }
    .divider {
        display: none;
        letter-spacing: 0;
    }

    @media (--sm) {
        .divider {
            display: block;
        }
        .logo {
            height: 4rem;
            flex-direction: row;
            gap: 1rem;
        }
        h1 {
            letter-spacing: 0.075em;
        }
    }
    @media (--md) {
        .logo {
            font-size: 15px;
            padding: 1rem var(--screen-padding);
        }
    }
</style>
