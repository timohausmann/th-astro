---
import Logo from "./Logo.astro";
import ProjectFilter from "./ProjectFilter.astro";
---

<header class="header row">
    <div class="logo interactive">
        <Logo />
    </div>

    <div class="filter interactive">
        <ProjectFilter />
    </div>
</header>

<style>
    .header {
        position: fixed;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
        top: 2rem;
        left: 0;
        z-index: 100;
        color: var(--color-blue);
        pointer-events: none;
    }
    .interactive {
        pointer-events: all;
    }

    .button {
        border: none;
        background: none;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        width: 3rem;
        height: 3rem;
        cursor: pointer;
        color: var(--color-blue);
        transition: background-color 0.2s ease;
        border-radius: 9999px;
    }
    .button:hover {
        background-color: var(--color-blue-5);
    }
</style>
