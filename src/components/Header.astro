---
import Logo from "./Logo.astro";
import ProjectFilter from "./ProjectFilter.astro";
---

<header class="header">
    <Logo />
</header>

<style>
    .header {
        position: fixed;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 2rem;
        top: 2rem;
        left: var(--screen-gutter); 
        z-index: 100;
        color: var(--color-blue);
    }
    .button {
        border: none;
        background: none;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        width: 3rem;
        height: 3rem;
        cursor: pointer;
        color: var(--color-blue);
        transition: background-color 0.2s ease;
        border-radius: 9999px;
    }
    .button:hover {
        background-color: var(--color-blue-5);
    }
</style>
