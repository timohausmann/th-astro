---
import FrostBar from "./FrostBar.astro";
import Logo from "./Logo.astro";
---

<header class="header row">
    <FrostBar class="header-frost-bar">
        <Logo />
    </FrostBar>
</header>

<style>
    .header {
        position: fixed;
        display: flex;
        top: 2rem;
        left: 0;
        z-index: 100;
        color: var(--color-blue);
        pointer-events: none;
    }
    .header :global(.header-frost-bar) {
        min-height: 4rem;
        pointer-events: all;
    }

    .button {
        border: none;
        background: none;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        width: 3rem;
        height: 3rem;
        cursor: pointer;
        color: var(--color-blue);
        transition: background-color 0.2s ease;
        border-radius: 9999px;
    }
    .button:hover {
        background-color: var(--color-blue-5);
    }
</style>
