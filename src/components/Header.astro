---
import { IconMenu2 } from "@tabler/icons-react";
import NavLink from "./NavLink.astro";
import FrostBar from "./FrostBar.astro";
import Logo from "./Logo.astro";
---

<header class="header row">
    <FrostBar>
        <Logo />
        <button class="button">
            <IconMenu2 />
        </button>
    </FrostBar>
</header>

<style>
    .header {
        position: fixed;
        display: flex;
        top: 2rem;
        left: 0;
        z-index: 100;
    }

    .button {
        border: none; 
        background: none;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0;
        margin: 0;
        width: 2rem;
        height: 2rem;
        cursor: pointer;
        color: var(--color-blue);
    }
</style>
