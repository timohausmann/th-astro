---
interface Props {
    text: string;
    suptitle?: string;
}

const { text, suptitle }: Props = Astro.props;
---

<div class="link">
    <div class="icon">
        <slot />
    </div>
    <div class="text-container">
        {suptitle && <span class="suptitle">{suptitle}</span>}
        <span class="text">{text}</span>
    </div>
</div>
<style>
    .link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: var(--color-purple);
    }
    .icon {
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 0.5rem;
        background-color: var(--color-blue-5);
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .text-container {
        display: flex;
        flex-direction: column;
        line-height: 1;
        gap: 0.375rem;
    }
    .suptitle {
        font-size: 13px;
        font-weight: 400;
    }
    .text {
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
</style>
